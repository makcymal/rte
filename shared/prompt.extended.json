{
  "mark": "extended",
  "interval": 1,
  "cpu": {
    "fields": [
      "system",
      "user",
      "nice",
      "idle",
      "iowait",
      "irq",
      "softirq",
      "steal",
      "guest",
      "guest_nice",
      "freq"
    ],
    "detailed": 1,
    "units": {
      "system": "%",
      "user": "%",
      "nice": "%",
      "iowait": "%",
      "idle": "%",
      "irq": "%",
      "softirq": "%",
      "steal": "%",
      "guest": "%",
      "guest_nice": "%",
      "freq": "hz"
    }
  },
  "net": {
    "fields": [
      "recv",
      "sent",
      "errin",
      "errout",
      "dropin",
      "dropout"
    ],
    "detailed": 1,
    "units": {
      "recv": "kb",
      "sent": "kb",
      "errin": "pcs",
      "errout": "pcs",
      "dropin": "pcs",
      "dropout": "pcs"
    }
  },
  "mem": {
    "fields": [
      "used",
      "buffers",
      "cached",
      "shared",
      "swap"
    ],
    "units": {
      "used": "kb",
      "buffers": "kb",
      "cached": "kb",
      "shared": "kb",
      "swap": "kb"
    }
  },
  "dsk": {
    "fields": [
      "used",
      "read",
      "write"
    ],
    "detailed": 1,
    "units": {
      "used": "kb",
      "read": "kb",
      "write": "kb"
    }
  },
  "gpu": {
    "fields": [
      "load",
      "memory"
    ],
    "detailed": 1,
    "units": {
      "load": "%",
      "memory": "mb"
    }
  }
}
